{
  "name": "sps",
  "scopeName": "source.sps",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#idfix"
    },
    {
      "include": "#plcvariables"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "keyword.control.directive.sps",
          "match": "#[A-Za-z_][A-Za-z0-9_]*"
        },
        {
          "name": "variable.language.special.sps",
          "match": "\\$[A-Za-z_][A-Za-z0-9_]*"
        },
        {
          "name": "comment.line.semicolon.sps",
          "match": ";.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.include.sps",
          "match": "\\b#Include\\b"
        },
        {
          "name": "string.quoted.include.sps",
          "begin": "(?<=#Include\\s+)[\"<]",
          "end": "[\">]"
        },
        {
          "name": "keyword.control.export.sps",
          "match": "\\bExport\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.special.pmver.sps",
          "match": "\\bpmver\\b"
        },
        {
          "name": "keyword.other.sps",
          "match": "\\b(?:Export|Static|Non_Inv|No_Filt|A_Pulse|B_Pulse|C_Pulse|OPT_S|Pgm_Pluto|Instruction_Set_3)\\b"
        }
      ]
    },
    "idfix": {
      "patterns": [
        {
          "name": "constant.numeric.idfix.sps",
          "match": "\\b[0-9A-F]{12}\\b"
        }
      ]
    },
    "plcvariables": {
      "patterns": [
        {
          "name": "variable.language.input.sps",
          "match": "\\bI\\d+\\.\\d+\\b"
        },
        {
          "name": "variable.language.output.sps",
          "match": "\\bQ\\d+\\.\\d+\\b"
        },
        {
          "name": "variable.language.globalmemory.sps",
          "match": "\\bGM\\d+\\.\\d+\\b"
        },
        {
          "name": "variable.language.memory.sps",
          "match": "\\bM\\d+\\.\\d+\\b"
        },
        {
          "name": "variable.language.register.sps",
          "match": "\\bR\\d+\\.\\d+\\b"
        },
        {
          "name": "variable.language.doubleregister.sps",
          "match": "\\bDR\\d+\\.\\d+\\.\\d+\\b"
        },
        {
          "name": "variable.language.systemmemory.sps",
          "match": "\\bSM\\d+\\.\\d+\\b"
        },
        {
          "name": "variable.language.systemregister.sps",
          "match": "\\bSR\\d+\\.\\d+\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.sps",
          "match": "\\b[A-Za-z][A-Za-z0-9_\\.]*\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.sps",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.sps",
          "match": "\\\\."
        }
      ]
    }
  }
}